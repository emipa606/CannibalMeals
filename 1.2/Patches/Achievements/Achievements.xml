<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationConditional">
    <xpath>/Defs/MainButtonDef[defName="Achievements"]</xpath>
    <success>Always</success>
    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>Defs</xpath>
          <value>
            <AchievementsExpanded.AchievementTabDef>
              <defName>Mlie_Continued</defName>
              <label>Continued Mods</label>
            </AchievementsExpanded.AchievementTabDef>
          </value>
        </li>
        <li Class="PatchOperationConditional">
          <success>Always</success>
          <xpath>/Defs/AchievementsExpanded.AchievementDef[@Name="Mlie_AchievementParent"]</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs</xpath>
            <value>
              <AchievementsExpanded.AchievementDef Name="Mlie_AchievementParent" Abstract="true">
                <bgtexPath>Achievements/AchievmentsBG</bgtexPath>
                <tab>Mlie_Continued</tab>
              </AchievementsExpanded.AchievementDef>
            </value>
          </nomatch>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>Defs</xpath>
          <value>
            <AchievementsExpanded.AchievementDef ParentName="Mlie_AchievementParent">
              <defName>CAN_WhenInNeed</defName>
              <label>When in need</label>
              <description>Obtain 20 simple cannibal meals</description>
              <tracker Class="AchievementsExpanded.ItemTracker">
                <def>CAN_CannibalMealSimple</def>
                <count>20</count>
              </tracker>
              <texPath>Achievements/CannibalSimple</texPath>
              <points>10</points>
            </AchievementsExpanded.AchievementDef>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>Defs</xpath>
          <value>
            <AchievementsExpanded.AchievementDef ParentName="Mlie_AchievementParent">
              <defName>CAN_CannibalCook</defName>
              <label>Cannibal Cook</label>
              <description>Obtain 20 fine cannibal meals</description>
              <tracker Class="AchievementsExpanded.ItemTracker">
                <def>CAN_CannibalMealFine</def>
                <count>20</count>
              </tracker>
              <texPath>Achievements/CannibalFine</texPath>
              <points>15</points>
            </AchievementsExpanded.AchievementDef>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>Defs</xpath>
          <value>
            <AchievementsExpanded.AchievementDef ParentName="Mlie_AchievementParent">
              <defName>CAN_HannibalCook</defName>
              <label>Hannibal Cook</label>
              <description>Obtain 20 lavish cannibal meals</description>
              <tracker Class="AchievementsExpanded.ItemTracker">
                <def>CAN_CannibalMealLavish</def>
                <count>20</count>
              </tracker>
              <texPath>Achievements/CannibalLavish</texPath>
              <points>25</points>
            </AchievementsExpanded.AchievementDef>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>